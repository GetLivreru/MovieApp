<!DOCTYPE html>
<html>
<head>
    <title>Movie Search</title>
</head>
<body>
    <h1>Search for Movies and Shows</h1>
    <form action="/tmdb" method="get">
        <input type="text" name="q" placeholder="Enter movie or show name">
        <button type="submit">Search</button>
    </form>

    <div class="movies-shows-container">
        <% if (moviesAndShows.length > 0) { %>
            <% moviesAndShows.forEach(item => { %>
                <div class="movie-show">
                    <img src="<%= item.poster_path %>" alt="<%= item.title %>">
                    <h3><%= item.title %></h3>
                </div>
            <% }); %>
        <% } else { %>
            <p>No movies or shows found.</p>
        <% } %>
    </div>
</body>
</html>