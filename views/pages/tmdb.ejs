<!-- views/tmdb.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <%- include('../components/head.ejs') %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>KinoBoom Characters</title>
    <style>
        body {
            display: flex;
            flex-direction: column;
            align-items: center;
            font-family: Arial, sans-serif;
        }
        .characters-container {
            width: 100%;
            max-width: 800px;
            margin-top: 20px;
        }
        .character-group {
            margin-bottom: 20px;
        }
        .character-group h2 {
            margin: 0;
        }
        .character-list {
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .character {
            margin: 0 10px;
            text-align: center;
        }
        .character img {
            width: 150px;
            height: 150px;
            object-fit: cover;
            border-radius: 50%;
        }
        .character h3 {
            margin-top: 10px;
        }
    </style>
</head>
<body>
    
    <% include('../components/navbar.ejs', { activePage: 'tmdb', user: user }) %>
    <div class="characters-container">
        <div class="character-group">
            <h2>TMDB Characters</h2>
            <div class="character-list">
                <% tmdbCharacters.forEach(character => { %>
                    <div class="character">
                        <img src="https://image.tmdb.org/t/p/w500<%= character.profile_path %>" alt="<%= character.name %>">
                        <h3><%= character.name %></h3>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>
    
</body>
</html>
